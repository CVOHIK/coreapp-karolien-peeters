@model ViewModels.AlbumsViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<h2>Filter op:</h2>

<form asp-controller="Albums" asp-action="Index" method="get">
    <label>Genre:</label>
    <select asp-for="genreID" asp-items="Model.Genres">
        <option value="">-- Select a genre --</option>
    </select>
    <input type="submit" value="Filter" />
</form>

<form asp-controller="Albums" asp-action="Index" method="get">
    <label>Artist:</label>
    <select asp-for="artistID" asp-items="Model.Artists">
        <option value="0">-- Select an artist --</option>
    </select>
    <input type="submit" value="Filter" />
</form>

<form asp-controller="Albums" asp-action="Index" method="get">
    <label>Title:</label>

    <input asp-for="titleFilter"/>   
    <input type="submit" value="Filter" />

</form>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ListAlbums[0].Artist)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ListAlbums[0].Genre)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.ListAlbums[0].Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ListAlbums)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Artist.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>



                <td>
                    <a asp-area="Admin" asp-action="Edit" asp-route-id="@item.AlbumID">Edit</a> |
                    <a asp-area="Admin" asp-action="Details" asp-route-id="@item.AlbumID">Details</a> |
                    <a asp-area="Admin" asp-action="Delete" asp-route-id="@item.AlbumID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
